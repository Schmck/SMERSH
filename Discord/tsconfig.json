{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": [ "es6" ],
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ]
}
